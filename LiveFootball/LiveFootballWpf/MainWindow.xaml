<Window x:Class="LiveFootballWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:LiveFootballWpf.Views"
        xmlns:viewModels="clr-namespace:LiveFootball.Core.ViewModels;assembly=LiveFootball.Core"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1000" MinWidth="600"
        d:DataContext="{d:DesignInstance viewModels:MainViewModel}">
    <!-- Background="{DynamicResource MaterialDesign.Brush.Background}" -->
    <!-- Foreground="{DynamicResource MaterialDesign.Brush.Foreground}" -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MinWidth="150" MaxWidth="270"/>
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <views:MenuView Grid.Column="0" Margin="20 20 20 20" />

        <ContentControl Grid.Column="1" Content="{Binding CurrentTabView}" Margin="0 0 20 20" />
    </Grid>
</Window>